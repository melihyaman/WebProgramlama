@model KuaforYonetim.Models.Randevu

@{
    ViewBag.Title = "Yeni Randevu";
    var calisanlar = ViewBag.Calisanlar as List<KuaforYonetim.Models.Calisan>;
    var islemler = ViewBag.Islemler as List<KuaforYonetim.Models.Islem>;
}

<h1>Yeni Randevu</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CalisanId">Çalışan</label>
        <select id="CalisanId" name="CalisanId" class="form-control">
            @foreach (var calisan in calisanlar)
            {
                <option value="@calisan.Id">@calisan.AdSoyad</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="IslemId">İşlem</label>
        <select id="IslemId" name="IslemId" class="form-control">
            @foreach (var islem in islemler)
            {
                <option value="@islem.Id">@islem.Ad</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="TarihSaat">Tarih ve Saat</label>
        <input type="datetime-local" class="form-control" id="TarihSaat" name="TarihSaat" required />
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>