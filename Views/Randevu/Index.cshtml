@model IEnumerable<KuaforYonetim.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Listesi";
}

<h1>Randevu Listesi</h1>

<a class="btn btn-primary" asp-action="Create">Yeni Randevu Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Çalışan</th>
            <th>İşlem</th>
            <th>Tarih ve Saat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.Id</td>
                <td>@randevu.Calisan.AdSoyad</td>
                <td>@randevu.Islem.Ad</td>
                <td>@randevu.TarihSaat</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@randevu.Id">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>